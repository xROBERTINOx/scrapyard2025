{
    "manifest_version": 3,
    "name": "YouTube Random Video Wheel",
    "version": "1.0",
    "description": "Adds a wheel spinner to YouTube to select random videos",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["*://*.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  